<title>Simulador Comprar vs Arrendar</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

</head>

<body style="
font-family: Inter;
background:#f5f5f4;
padding:40px;
text-align:center;
">

<h1>Simulador Comprar vs Arrendar</h1>

<div style="
background:white;
padding:30px;
max-width:500px;
margin:auto;
border-radius:12px;
box-shadow:0 10px 30px rgba(0,0,0,0.1);
">

<p>Pre√ßo da casa (‚Ç¨)</p>
<input id="preco" type="number" placeholder="200000" style="width:100%;padding:10px">

<p>Entrada (‚Ç¨)</p>
<input id="entrada" type="number" placeholder="20000" style="width:100%;padding:10px">

<p>Taxa de juro anual (%)</p>
<input id="juros" type="number" placeholder="4" style="width:100%;padding:10px">

<p>Dura√ß√£o do cr√©dito (anos)</p>
<input id="anos" type="number" placeholder="30" style="width:100%;padding:10px">

<p>Renda mensal (‚Ç¨)</p>
<input id="renda" type="number" placeholder="900" style="width:100%;padding:10px">

<button onclick="calcular()" style="
margin-top:20px;
padding:15px;
width:100%;
background:#14532d;
color:white;
border:none;
border-radius:8px;
font-size:16px;
">
Calcular
</button>

<h2 id="resultado" style="margin-top:20px;"></h2>

</div>

<script>

function calcular(){

let preco = +document.getElementById("preco").value;
let entrada = +document.getElementById("entrada").value;
let juros = +document.getElementById("juros").value / 100 / 12;
let anos = +document.getElementById("anos").value * 12;
let renda = +document.getElementById("renda").value;

let emprestimo = preco - entrada;

let mensal = emprestimo * (juros * (1+juros)**anos) / ((1+juros)**anos - 1);

let custoComprar = mensal * anos;
let custoArrendar = renda * anos;

let texto = "";

if(custoComprar < custoArrendar){
texto = "üè† Comprar compensa mais a longo prazo!";
}else{
texto = "üí∏ Arrendar fica mais barato!";
}

document.getElementById("resultado").innerText = texto;

}

</script>

</body>
</html>
